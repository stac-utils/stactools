#!/bin/bash

set -e

if [[ -n "${STACTOOLS_DEBUG}" ]]; then
    set -x
fi

function usage() {

    echo -n \
        "Usage: $(basename "$0")
Build stactools containers. Must be run from the repository root
"
}

if [ "${BASH_SOURCE[0]}" = "${0}" ]; then
    if [ "${1:-}" = "--help" ]; then
        usage
    else
        docker build --target main -t stacutils/stactools:latest -f docker/Dockerfile .
        docker build --target dev -t stacutils/stactools:latest-dev -f docker/Dockerfile .
    fi
    exit
fi
